<head>
	<meta charset="utf-8" />

	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
	
	<meta name="description" content="Wael Emara Blog , technical and photography" />
	
	<meta name="author" content="Wael Emara" />
	<meta name="copyright" content="Wael Emara. Copyright (c) 2014" />


	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "vendor/custom.modernizr" %>
	<%= javascript_include_tag "vendor" %>
	<%= csrf_meta_tags %>
</head>

<body>

	<%= render :partial => "layouts/header"%>
	<div class="row">
		<!-- Main Content -->
		<div class="large-9 columns" role="content"><%= yield %></div>
		<!-- End Of Main Content -->
		<aside class="large-3 columns">

			<h5>Tags</h5>
			<ul class="side-nav">
				<% Tag.all.each do | t |%>
				<li> <%= link_to t.name , tag_path(t) %> </li>
				<% end %>
			</ul>

			<%= render :partial => "layouts/twitter_feed" %>
		</aside>
	</div>

	<%= render :partial => "layouts/footer"%>
	
	<%= javascript_include_tag "application" %>
</body>
</html>
