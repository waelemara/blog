<div class="new-post">

<%= form_for(@post) do |p| %>
	<div class="row">
		<div class="large-12 column">
			<%= p.label :title %>
			<%= p.text_field :title , :placeholder => "What is your post title is" %>
		</div>
		<div class="large-12 column">
			<%= p.label :tags %>
			<% Tag.all.each do |t|%>
				<%= check_box("tag","id" , {:multiple => true} , t.id ,t.name) %>
				<%= t.name%>
			<% end%>
		</div>
		<div class="large-12 column">
			<%= p.label (:description) %>
			<%= p.text_field :description , :placeholder => "Quick description about your post" %>
		</div>
		<div class="large-12 column">
			<%= p.label :body%>
			<%= p.text_area :body , :class => "ckeditor"%>
		</div>
		<div class="large-12 column">
			<%= p.submit "Submit" , :class => "button radius" %>
		</div>
	</div>
<% end %>

</div>